<% if(locals.message) { %>
  <div class="message is-danger">
  <div class="message-body">
  <%= message %>
  </div>
  </div>
  <% } %>

  <div class="container has-background-grey">
    <form method="POST" action="/sessions">

      <div class="columns">
        <div class="column is-half is-offset-one-quarter">
          <div class="field">
            <label class="has-text-white" for="email">Email</label>
            <input class="input" type="text" name="email" id="email">
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="column is-half is-offset-one-quarter">
          <div class="field">
            <label class="has-text-white" for="password">Password</label>
            <input class="input" type="password" name="password" id="password">
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="column is_half is-offset-one-quarter">

          <button class="button is-info">Login</button>
        </div>
      </div>
    </form>
  </div>
